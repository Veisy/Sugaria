<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="20dp"
    android:id="@+id/cartView_catalogListItem">

    <RelativeLayout
        android:layout_width="@dimen/catalogImagesWidth"
        android:layout_height="@dimen/catalogImagesHeight"
        >

        <ImageView
            android:id="@+id/imageView_catalogItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/textView_catalogItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView_catalogItem"
            android:background="@color/colorCatalogItemTitleBackground"
            android:padding="8dp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>
