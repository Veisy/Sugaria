<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CheckFragment">

    <ImageView
        android:id="@+id/imageView_eyeCheckImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/eye_controls"
        android:src="@drawable/ic_eye"
        app:layout_constraintEnd_toStartOf="@id/textView_eyeCheckTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_footCheckImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/foot_controls"
        android:src="@drawable/ic_leg"
        app:layout_constraintEnd_toStartOf="@id/textView_footCheckTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_addEyeControl" />

    <TextView
        android:id="@+id/textView_eyeCheckTitle"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/eye_controls"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_eyeCheckImage"
        app:layout_constraintStart_toEndOf="@+id/imageView_eyeCheckImage"
        app:layout_constraintTop_toTopOf="@+id/imageView_eyeCheckImage" />

    <TextView
        android:id="@+id/textView_footCheckTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/foot_controls"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView_footCheckImage"
        app:layout_constraintStart_toEndOf="@+id/imageView_footCheckImage"
        app:layout_constraintTop_toTopOf="@+id/imageView_footCheckImage" />

    <TextView
        android:id="@+id/textView_addEyeControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/add_eye_check"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/imageView_footCheckImage"
        app:layout_constraintEnd_toStartOf="@id/imageButton_addEyeControl"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_eyeCheckImage" />

    <TextView
        android:id="@+id/textView_addFootControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/add_foot_check"
        app:layout_constraintEnd_toStartOf="@id/imageButton_addFootControl"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView_footCheckImage" />

    <ImageButton
        android:id="@+id/imageButton_addEyeControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_previous"
        android:contentDescription="@string/add_eye_check"
        android:src="@drawable/ic_add_to_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/textView_addEyeControl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_addEyeControl"
        app:layout_constraintTop_toTopOf="@+id/textView_addEyeControl" />

    <ImageButton
        android:id="@+id/imageButton_addFootControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_previous"
        android:contentDescription="@string/add_foot_check"
        android:src="@drawable/ic_add_to_calendar"
        app:layout_constraintBottom_toBottomOf="@+id/textView_addFootControl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_addFootControl"
        app:layout_constraintTop_toTopOf="@+id/textView_addFootControl" />

</androidx.constraintlayout.widget.ConstraintLayout>