<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CatalogMasterFragment">

    <TextView
        android:id="@+id/textView_catalog"
        style="@style/main_title"
        android:background="@drawable/header_catalog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/catalog"
        app:layout_constraintBottom_toBottomOf="@id/imageView_catalog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/imageView_catalog"/>

    <ImageView
        android:id="@+id/imageView_catalog"
        android:layout_width="@dimen/mainImage_width"
        android:layout_height="@dimen/mainImage_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/catalog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/main_education_catalog" />

    <View
        android:id="@+id/seperator_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/imageView_catalog"
        app:layout_constraintBottom_toTopOf="@id/recyclerView_catalog"
        android:background="@color/colorGrey"/>

    <com.example.sekerimremake.CustomGridRecyclerView
        android:id="@+id/recyclerView_catalog"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seperator_line" />


</androidx.constraintlayout.widget.ConstraintLayout>