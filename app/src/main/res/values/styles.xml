<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tabLayoutSubheadStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_style">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/text_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textSize_x_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="subtitle_style">
        <item name="android:padding">@dimen/padding_small</item>
        <item name="android:background">@drawable/text_frame</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize_x_medium</item>
        <item name="android:textColor">@color/colorGreyDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="values_style" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:paddingTop">@dimen/padding_large</item>
        <item name="android:paddingBottom">@dimen/padding_large</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="header_measurement">
        <item name="android:textColor">@color/colorGreyLevel2</item>
        <item name="paddingEnd">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/margin_x_large</item>

    </style>

    <style name="button_add_row">
        <item name="android:visibility">gone</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:layout_marginEnd">@dimen/margin_medium</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginStart">@dimen/margin_medium</item>
        <item name="android:paddingStart">@dimen/padding_large</item>
        <item name="android:paddingLeft">@dimen/padding_large</item>
        <item name="android:paddingEnd">@dimen/padding_large</item>
        <item name="android:paddingRight">@dimen/padding_large</item>
        <item name="android:textColor">@color/colorGreyLevel7</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_measurement_edit">
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/ic_edit</item>
        <item name="android:layout_marginLeft">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_medium</item>

    </style>

    <style name="edit_text_measurement" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_measurement</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:ems">6</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGreyLevel1</item>
        <item name="android:textColorHint">#FFF</item>
        <item name="android:hint">@string/hint_enter_result</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="ai_header_measurement">
        <item name="android:textColor">@color/colorGreyLevel2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">@dimen/margin_small</item>
    </style>

    <style name="ai_edit_text_measurement" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/text_frame</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:padding">@dimen/padding_medium</item>
        <item name="android:ems">5</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorGreyLevel1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:maxLength">6</item>
    </style>
</resources>