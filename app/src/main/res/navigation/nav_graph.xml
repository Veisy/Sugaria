<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chartFragment">

    <fragment
        android:id="@+id/chartFragment"
        android:name="com.vyy.sugaria.fragments.ChartMasterFragment"
        android:label="@string/chart"
        tools:layout="@layout/fragment_chart">
        <action
            android:id="@+id/action_chartFragment_to_chartRowFragment"
            app:destination="@id/chartRowFragment" />
    </fragment>
    <fragment
        android:id="@+id/catalogFragment"
        android:name="com.vyy.sugaria.fragments.CatalogMasterFragment"
        android:label="@string/catalog"
        tools:layout="@layout/fragment_catalog">
        <action
            android:id="@+id/action_catalogFragment_to_catalogItemFragment"
            app:destination="@id/catalogItemFragment" />
    </fragment>
    <fragment
        android:id="@+id/checkFragment"
        android:name="com.vyy.sugaria.fragments.CheckFragment"
        android:label="@string/check"
        tools:layout="@layout/fragment_check" />
    <fragment
        android:id="@+id/alarmFragment"
        android:name="com.vyy.sugaria.fragments.AlarmFragment"
        android:label="@string/alarm"
        tools:layout="@layout/fragment_alarm" />
    <fragment
        android:id="@+id/catalogItemFragment"
        android:name="com.vyy.sugaria.fragments.CatalogDetailFragment"
        android:label="@string/catalog"
        tools:layout="@layout/fragment_catalog_detail">
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/chartRowFragment"
        android:name="com.vyy.sugaria.fragments.ChartDetailFragment"
        android:label="@string/chart"
        tools:layout="@layout/fragment_chart_detail">
        <argument
            android:name="button_flag"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="position"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/deepLearningFragment"
        android:name="com.vyy.sugaria.fragments.DeepLearningFragment"
        android:label="Deep Learning"
        tools:layout="@layout/fragment_deep_learning" />


</navigation>